<% tid = enki_config[:twitter].try(:[], :id)
if tid %>
<h2>Twitter</h2>
  <script src="http://widgets.twimg.com/j/2/widget.js"></script>
  <script>
  new TWTR.Widget({
    version: 2,
    type: 'profile',
    rpp: 4,
    interval: 6000,
    width: 215,
    height: 300,
    theme: {
      shell: {
        background: '#ffffff',
        color: '#000000'
      },
      tweets: {
        background: '#ffffff',
        color: '#000000',
        links: '#0000ff'
      }
    },
    features: {
      scrollbar: false,
      loop: false,
      live: false,
      hashtags: true,
      timestamp: false,
      avatars: false,
      behavior: 'all'
    }
  }).render().setUser('<%= tid %>').start();
  </script>
<%end%>